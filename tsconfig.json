{
    "compilerOptions": {
        "diagnostics": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "lib": [ "es2016", "esnext.asynciterable", "es2016.array.include", "dom" ],
        "moduleResolution": "node",        
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
        "outDir": "lib",
        "baseUrl": ".",
        "sourceMap": true,
        "allowJs": true,
        "types": [
            "lib/index.d.ts"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],        
        "paths": {
            "*": [
                "types/*"
            ]
        }
    },
    "include": [
        "example",
        "src"
    ],
    "exclude": [
        "dist",
        "template",
        
    ]
}